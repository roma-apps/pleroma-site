  },
  "homepage": "https://github.com/roma-apps/pleroma-site#readme",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.4",
    "eslint-plugin-react-hooks": "^1.5.0",
    "gulp": "^4.0.0",
    "gulp-gm": "0.0.9",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jsbeautifier": "^3.0.0",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.4.0",
