{
  "name": "pleroma-site",
  "version": "1.0.0",
  "scripts": {
    "start": "gulp critical && concurrently \"hugo serve --disableFastRender\" \"gulp watch\"",
    "build": "gulp critical && hugo -e production && gulp fixHugo",
    "development": "gulp critical && hugo -e development && gulp fixHugo",
    "clean": "rm -rf public resources",
    "clean-node": "rm -rf node_modules package-lock.json"
  },
